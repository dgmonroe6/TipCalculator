<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ObamaStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffff4b4b</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_above">@+id/resetButton</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:backgroundTint">#fffaff3c</item>
        <item name="android:background">#ffffff3c</item>
        <item name="android:layout_toLeftOf">@+id/tipTextView</item>
        <item name="android:layout_toStartOf">@+id/tipTextView</item>
    </style>

</resources>
