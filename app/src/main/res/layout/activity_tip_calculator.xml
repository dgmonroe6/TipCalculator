<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TipCalculatorActivity"
    android:background="@drawable/money">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bill Amount: "
        android:id="@+id/billAmountLabel"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="@android:color/holo_green_light"
        android:textStyle="normal"
        android:layout_marginTop="25dp"
        android:paddingBottom="0dp"
        android:singleLine="true"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Percent: "
        android:id="@+id/percentLabel"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:layout_below="@+id/billAmountLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_light"
        android:gravity="center_vertical|right"
        android:textStyle="normal"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percentTextView"
        android:inputType="numberDecimal"
        android:text="@string/tip_percent"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_alignTop="@+id/percentLabel"
        android:background="@android:color/holo_green_light"
        android:layout_toRightOf="@+id/percentLabel"
        android:layout_alignRight="@+id/tipTextView"
        android:layout_alignEnd="@+id/tipTextView"
        android:layout_above="@+id/tipTextView"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tipTextView"
        android:inputType="numberDecimal"
        android:text="@string/tip_amount"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/holo_green_light"
        android:layout_toRightOf="@+id/percentLabel"
        android:gravity="left|center_vertical"
        android:layout_below="@+id/percentLabel"
        android:layout_alignBottom="@+id/tipLabel"
        android:layout_alignRight="@+id/billAmountEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalTextView"
        android:inputType="numberDecimal"
        android:text="@string/total_amount"
        android:textSize="28sp"
        android:background="@android:color/holo_green_light"
        android:gravity="left"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:layout_above="@+id/resetButton"
        android:layout_alignRight="@+id/resetButton"
        android:layout_alignEnd="@+id/resetButton"
        android:layout_toRightOf="@+id/percentLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tip: "
        android:id="@+id/tipLabel"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:layout_below="@+id/percentLabel"
        android:gravity="center_vertical|right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_light"
        android:layout_toLeftOf="@+id/percentTextView"
        android:layout_toStartOf="@+id/percentTextView"
        android:textStyle="normal"
        android:layout_alignParentEnd="false"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Reset"
        android:id="@+id/resetButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:background="@android:color/background_dark"
        android:layout_marginTop="10dp"
        android:textSize="26sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total: "
        android:id="@+id/totalLabel"
        android:layout_alignTop="@+id/totalTextView"
        android:layout_toLeftOf="@+id/totalTextView"
        android:gravity="center_vertical|right"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="28sp"
        android:textStyle="bold"
        android:background="@android:color/holo_green_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/billAmountEditText"
        android:layout_alignTop="@+id/billAmountLabel"
        android:layout_toRightOf="@+id/billAmountLabel"
        android:layout_above="@+id/percentTextView"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="normal"
        android:layout_alignRight="@+id/totalTextView"
        android:layout_alignEnd="@+id/totalTextView" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percentSeekBar"
        android:layout_below="@+id/tipTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:max="30"
        android:progress="15"
        android:indeterminate="false"
        android:layout_toLeftOf="@+id/applyButton"
        android:layout_toStartOf="@+id/applyButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:id="@+id/applyButton"
        android:layout_alignBottom="@+id/percentSeekBar"
        android:layout_alignRight="@+id/tipTextView"
        android:layout_alignEnd="@+id/tipTextView"
        android:layout_alignParentEnd="false"
        android:textSize="20sp" />
</RelativeLayout>
